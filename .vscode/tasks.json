{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP",
                "BUILD_MODE=DEBUG"
            ],
            "windows": {
                "command": "C:/cpp/lib/raylib-desktop/w64devkit/bin/mingw32-make.exe",
                "args": [
                    "RAYLIB_PATH=C:/cpp/lib/raylib-desktop/raylib",
                    "PROJECT_NAME=${fileBasenameNoExtension}",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "osx": {
                "args": [
                    "PROJECT_NAME=${fileBasenameNoExtension}",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "linux": {
                "args": [
                    "PROJECT_NAME=${fileBasenameNoExtension}",
                    "DESTDIR=/home/linuxbrew/.linuxbrew",
                    "RAYLIB_LIBTYPE=SHARED",
                    "EXAMPLE_RUNTIME_PATH=/home/linuxbrew/.linuxbrew/lib",
                    "OBJS=*.cpp",
                    "BUILD_MODE=DEBUG"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "process",
            "command": "make",
            "args": [
                "PLATFORM=PLATFORM_DESKTOP"
            ],
            "windows": {
                "command": "C:/cpp/lib/raylib-desktop/w64devkit/bin/mingw32-make.exe",
                "args": [
                    "RAYLIB_PATH=C:/cpp/lib/raylib-desktop/raylib",
                    "PROJECT_NAME=${fileBasenameNoExtension}",
                    "OBJS=*.cpp"
                ]
            },
            "osx": {
                "args": [
                    "PROJECT_NAME=${fileBasenameNoExtension}",
                    "OBJS=*.cpp"
                ]
            },
            "linux": {
                "args": [
                    "PROJECT_NAME=${fileBasenameNoExtension}",
                    "DESTDIR=/home/linuxbrew/.linuxbrew",
                    "RAYLIB_LIBTYPE=SHARED",
                    "EXAMPLE_RUNTIME_PATH=/home/linuxbrew/.linuxbrew/lib",
                    "OBJS=*.cpp"
                ]
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: C:\\cpp\\lib\\raylib-desktop\\w64devkit\\bin\\g++.exe"
        },
        {
            "label": "build web cpp con index.html",
            "type": "shell",
            "command": "C:/cpp/lib/raylib-web/emsdk/upstream/emscripten/em++.bat",
            "args": [
                "*.cpp",
                "-std=c++14",
                "-o",
                "web_dev/index.html",

                "-IC:/cpp/lib/raylib-web/raylib/src",
                "-LC:/cpp/lib/raylib-web/raylib/src",
                "-lraylib",

                "-s", "USE_GLFW=3",
                "-DPLATFORM_WEB"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build web cpp sin index.html",
            "type": "shell",
            "command": "C:/cpp/lib/raylib-web/emsdk/upstream/emscripten/em++.bat",
            "args": [
                "*.cpp",
                "-std=c++14",
                "-o",
                "web_publish/index.js",

                "-IC:/cpp/lib/raylib-web/raylib/src",
                "-LC:/cpp/lib/raylib-web/raylib/src",
                "-lraylib",

                "-s", "USE_GLFW=3",
                "-DPLATFORM_WEB"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
